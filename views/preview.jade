extends layout

block content
  h1= comic.title
  div#comic.row
    div.collum
      div.pane
        img.paneImage(src=comic.panes[0].imageSource)
      div.comment=comic.panes[0].comment
    div.collum
      div.pane
        img.paneImage(src=comic.panes[1].imageSource)
      div.comment=comic.panes[1].comment
    div.collum
      div.pane
        img.paneImage(src=comic.panes[2].imageSource)
      div.comment=comic.panes[2].comment
  a(href="/telecomics/"+comic._id+"/edit") Edit Comic 
  form(action="/telecomics/"+comic._id+"/delete" method="post")
    button(type="submit") Delete Comic
  form(action='/telecomics/'+comic._id+'/send' method='post')
    if error
     ul
      li= error
    label(for='recipients') Recipents:
    p Enter one e-mail per line
    p
      textarea(name='recipients' id='recipients')
    button(type='submit') SEND
